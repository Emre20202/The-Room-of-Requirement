#include <stdio.h>
#include <stdlib.h>
int main() {
	int num,a,b,i,u;
	char ch;
	scanf("%d %c",&num,&ch);
	for(a=1;a<=num;a++){//Top of the figure begins.
		printf(" ");
	}
	printf("/");
	printf("\\");
	for(a=1;a<=num;a++){
		printf("_");
	}
    printf("/");
    printf("\\");
    printf("\n"); // Top of the figure ends.
	for(b=(num-1),u=(num-1);b>=1;b--,u=u+2){
		for(i=1;i<=b;i++){
        	printf(" ");
        	      }
        printf("/");
        if((num-num/2-1)==b){
        	for(i=1;i<=b+1;i++){
        		printf(" ");
        	}
        	printf("%c",ch);
        	for(i=1;i<=b;i++){
        	printf(" ");}
        	printf(".");
        	for(i=1;i<=b;i++){
        	printf(" ");}
        	printf("%c",ch);
        	for(i=1;i<=b+1;i++){
        		printf(" ");
        	}
        	printf("\\");
        	printf("\n");
        		}
        		else{
        for(i=1;i<=u+5;i++){
        	printf(" ");
        	}
        printf("\\");
        printf("\n");
	}}
	printf("(");//The middle begins.
	for(a=1;a<=(3*num+2);a++){
		printf(" ");
	}
	printf(")");
	printf("\n");//The middle ends.
	for(a=1,u=(3*num);a<=num-2;a++,u=u-2){
		for(i=1;i<=a;i++){
			printf(" ");
		}
		printf("\\");
		for(i=1;i<=u;i++){
			printf(" ");
		}
		printf("/");
		printf("\n");
	}
	for(i=1;i<=num-1;i++){
		printf(" ");
	}
    printf("\\");
    for(i=1;i<=(num+4);i++){
    	printf("_");
    	 }
    printf("/");
  return 0;
	}
